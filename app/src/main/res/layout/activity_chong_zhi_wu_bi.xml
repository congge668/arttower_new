<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cl_f4f4f4"
    tools:context=".activity.ChongZhiWuBiActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/cl_ff7b00"
        android:layout_height="@dimen/dp_50">
        
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:background="@mipmap/returnwith"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="@dimen/dp_24"/>
        <TextView
            android:layout_width="@dimen/dp_36"
            android:text="充值"
            android:layout_marginLeft="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_height="@dimen/dp_25"/>
        
    </RelativeLayout>
    
    <TextView
        android:layout_width="@dimen/dp_72"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:textColor="@color/cl_4d4c4b"
        android:textSize="@dimen/sp_12"
        android:text="选择充值数额"
        android:layout_height="@dimen/dp_17"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chongzhi_wubi_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/money_button"
        android:layout_width="@dimen/dp_311"
        android:background="@drawable/shape_submit"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_100"
        android:textSize="@dimen/sp_18"
        android:text="立即充值"
        android:layout_height="@dimen/dp_44"/>
</LinearLayout>