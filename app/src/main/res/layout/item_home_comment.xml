<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">
    
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_head"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_14"
        tools:text="大家好"
        />

    <TextView
        android:id="@+id/tv_user_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        tools:text="大家好"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cl_f2f2f2"
        app:layout_constraintTop_toBottomOf="@id/tv_user_comment"
        android:layout_marginTop="@dimen/dp_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>