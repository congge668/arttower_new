<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_320"
    android:layout_height="@dimen/dp_360"
    android:background="@color/cl_f2f2f2">

    <ImageView
        android:id="@+id/share_video_img"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_171"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/icon_kong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/share_video_name"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/zhanweitu"
            android:layout_height="@dimen/dp_48"/>
<TextView
    android:layout_width="@dimen/dp_110"
    android:text="扫描二维码
查看精彩视频内容"
    android:textColor="@color/cl_c2c0be"
    android:textSize="@dimen/sp_14"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_height="@dimen/dp_40"/>
    </LinearLayout>

    <TextView
        android:id="@+id/share_video_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@+id/share_video_content"
        android:layout_alignRight="@id/share_video_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="——康明娜"
        android:textColor="@color/cl_c2c0be"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/share_video_content"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_video_img"
        android:layout_alignRight="@id/share_video_img"
        android:layout_marginTop="@dimen/dp_15"
        android:text="突然，她从窗口旋风般地转过身来站在壁镜前面。她两眼晶莹透亮。"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>